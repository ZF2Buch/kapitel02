<h3>Ausgabe</h3>
<pre>
<?php 
    class PizzaSalami {
        public static function getNameSelf() {
            return self::name();
        }
    
        public static function getNameStatic() {
            return static::name();
        }
    
        public static function name() {
            return 'Pizza mit Salami';
        }
    }
    
    class PizzaSalamiPeperoni extends PizzaSalami {
        public static function name() {
            return 'Pizza mit Salami und Peperoni';
        }
    }
    
    echo PizzaSalami::getNameSelf() . "<br />";           // Pizza mit Salami
    echo PizzaSalami::getNameStatic() . "<br />";         // Pizza mit Salami
    
    echo PizzaSalamiPeperoni::getNameSelf() . "<br />";   // Pizza mit Salami
    echo PizzaSalamiPeperoni::getNameStatic() . "<br />"; // Pizza mit Salami und Peperoni
